<%= form_for @app_day, :html => { :class => "form-horizontal app_day" } do |f| %>

  <% if @app_day.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@app_day.errors.count, "error") %> prohibited this app_day from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @app_day.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :childern_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :childern_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:childern_id) %>
  </div>
  <div class="form-group">
    <%= f.label :comment, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :comment, :class => 'form-control' %>
    </div>
    <%=f.error_span(:comment) %>
  </div>
  <div class="form-group">
    <%= f.label :thema, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :thema, :class => 'form-control' %>
    </div>
    <%=f.error_span(:thema) %>
  </div>
  <div class="form-group">
    <%= f.label :outdoors, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :outdoors, :class => 'form-control' %>
    </div>
    <%=f.error_span(:outdoors) %>
  </div>
  <div class="form-group">
    <%= f.label :sleep, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sleep, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sleep) %>
  </div>
  <div class="form-group">
    <%= f.label :food, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :food, :class => 'form-control' %>
    </div>
    <%=f.error_span(:food) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                app_days_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
