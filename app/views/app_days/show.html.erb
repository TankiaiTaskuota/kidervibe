<%- model_class = AppDay -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:childern_id) %>:</strong></dt>
  <dd><%= @app_day.childern_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @app_day.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:thema) %>:</strong></dt>
  <dd><%= @app_day.thema %></dd>
  <dt><strong><%= model_class.human_attribute_name(:outdoors) %>:</strong></dt>
  <dd><%= @app_day.outdoors %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sleep) %>:</strong></dt>
  <dd><%= @app_day.sleep %></dd>
  <dt><strong><%= model_class.human_attribute_name(:food) %>:</strong></dt>
  <dd><%= @app_day.food %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              app_days_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_app_day_path(@app_day), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              app_day_path(@app_day),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
