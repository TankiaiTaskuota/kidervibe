<%- model_class = AppDay -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= page_entries_info @app_days %>
<br>
<%= paginate @app_days %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:childern_id) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:thema) %></th>
      <th><%= model_class.human_attribute_name(:outdoors) %></th>
      <th><%= model_class.human_attribute_name(:sleep) %></th>
      <th><%= model_class.human_attribute_name(:food) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @app_days.each do |app_day| %>
      <tr>
        <td><%= link_to app_day.id, app_day_path(app_day) %></td>
        <td><%= nice_child_link(app_day.childern) %></td>
        <td><%= app_day.comment %></td>
        <td><%= app_day.thema %></td>
        <td><%= app_day.outdoors %></td>
        <td><%= app_day.sleep %></td>
        <td><%= app_day.food %></td>
        <td><%=l app_day.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      app_day_path(app_day), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_app_day_path(app_day), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      app_day_path(app_day),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_app_day_path,
            :class => 'btn btn-primary' %>
