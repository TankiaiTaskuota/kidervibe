<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :thread_app_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :thread_app_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:thread_app_id) %>
  </div>
  <div class="form-group">
    <%= f.label :post_app_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :post_app_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:post_app_id) %>
  </div>
  <div class="form-group">
    <%= f.label :attachment_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :attachment_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:attachment_url) %>
  </div>
  <div class="form-group">
    <%= f.label :info, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :info, :class => 'form-control' %>
    </div>
    <%=f.error_span(:info) %>
  </div>
  <div class="form-group">
    <%= f.label :sender_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sender_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sender_name) %>
  </div>
  <div class="form-group">
    <%= f.label :sender_app_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sender_app_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sender_app_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
