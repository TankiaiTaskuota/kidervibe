<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:childern_id) %>:</strong></dt>
  <dd><%= @image.childern_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @image.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:app_id) %>:</strong></dt>
  <dd><%= @image.app_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_url) %>:</strong></dt>
  <dd><%= @image.image_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_path) %>:</strong></dt>
  <dd><%= @image.image_path %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ext) %>:</strong></dt>
  <dd><%= @image.ext %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              images_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_image_path(@image), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              image_path(@image),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
